<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/md_indigo_50">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="-20dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/dalangwayangulit">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="32sp"
            android:gravity="center"
            android:text="@string/dalangwayangkulit"
            android:textStyle="bold"
            android:textColor="@color/md_black_1000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:text="@string/des_dalangwayangkulit"
            android:textColor="@color/md_blue_grey_900"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Portofolio"
                android:onClick="onPortofolioKomunitas"/>

            <Button
                android:id="@+id/button"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="80dp"
                android:text="Sewa"
                android:onClick="onSewaKomunitas"/>
        </LinearLayout>


    </LinearLayout>


</ScrollView>